<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dwi.cctv_view">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".server.AppController"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScrenn"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cctvpolda.ListCctvPolda"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cctvpolresta.ListCctvPolresta"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Apps"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cctvpolda.PlayCctvPolda"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cctvpolresta.PlayCctvPolresta"
            android:screenOrientation="portrait" />
        <activity android:name=".webview.WebViewCctv"
            android:configChanges="orientation|screenSize"></activity>
    </application>

</manifest>